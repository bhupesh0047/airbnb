<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-50">
    <%- include('../partials/navHeader') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-3 max-w-6xl">
      <!-- Header Section -->
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">
          Manage Your Properties
        </h2>
        <p class="text-gray-600">
          Edit and organize your listed homes
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300 w-full max-w-sm">
            <!-- Image Container with Price Overlay -->
            <div class="relative">
              <img 
                src="<%= home.Photo %>" 
                alt="<%= home.name %>" 
                class="w-full h-48 object-cover"
              >
              <!-- Price Badge Overlay -->
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
                <span class="text-lg font-bold text-blue-600">â‚¹<%= home.price %></span>
                <span class="text-gray-600 text-sm">/night</span>
              </div>
            </div>

            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.name %></h3>
              <p class="text-gray-600 mb-3 flex items-center">
                <i class="fas fa-map-marker-alt text-blue-500 mr-2"></i>
                <%= home.location %>
              </p>

              <!-- Rating Section -->
              <div class="bg-gray-50 rounded-lg p-2 mb-4">
                <div class="flex items-center">
                  <div class="flex mr-2">
                    <% for(let i = 0; i < Math.floor(home.rating); i++) { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" 
                        class="w-5 h-5 text-yellow-400">
                        <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                      </svg>
                    <% } %>
                    <% for(let i = Math.floor(home.rating); i < 5; i++) { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" 
                        class="w-5 h-5 text-gray-300">
                        <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                      </svg>
                    <% } %>
                  </div>
                  <span class="text-sm font-medium text-gray-600">
                    <%= home.rating %> out of 5
                  </span>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex items-center justify-between gap-3">
                <a 
                  href="/host/edit-home/<%=home._id%>?editing=true" 
                  class="flex items-center justify-center gap-2 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-full font-medium transition-all duration-300"
                >
                  <i class="fas fa-edit"></i>
                  Edit
                </a>
                
                <form action="/host/delete-home/<%=home._id%>" method="POST">
                  <button 
                    type="submit"
                    class="flex items-center gap-2 px-4 py-2 border-2 border-red-500 text-red-500 hover:bg-red-500 hover:text-white rounded-full transition-all duration-300"
                  >
                    <i class="fas fa-trash-alt"></i>
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>